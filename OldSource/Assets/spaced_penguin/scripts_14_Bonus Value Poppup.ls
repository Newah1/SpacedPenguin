property pSprite, pState, pFrame, pTextMemberglobal gBonuson beginSprite me  pState = #iddle  pSprite = sprite(me.spriteNum)  pSprite.loc = point(1000, 1000)  pTextMember = member("txt_db")endon showBonus me, tempVal, tempLoc  pTextMember.text = "+ " & tempVal  pSprite.visible = 1  pState = #showing  pFrame = 45  pSprite.loc = tempLoc  pSprite.locV = pSprite.locV - 10endon prepareFrame me  if pState = #showing then    pFrame = pFrame - 1    pSprite.locV = pSprite.locV - 1    if pFrame < 0 then      pState = #iddle      pSprite.visible = 0    end if  end ifend